<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_footer"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:layout_alignParentBottom="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="#cccc"
        />

    <LinearLayout
        android:id="@+id/day_cals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/day_cals_left"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:progress="0"/>

        <TextView
            android:id="@+id/day_cals_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:text="0/2500"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:text="ккал осталось"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/add_food_button"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:visibility="gone"
        android:background="@drawable/add_food_background">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="28dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="4dp"
                android:src="@drawable/btn_plus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:text="Добавить"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_more_food_button"
        android:layout_width="182dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:background="@drawable/add_food_background">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="28dp"
                android:scaleType="centerInside"
                android:layout_marginEnd="4dp"
                android:src="@drawable/btn_plus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:text="Добавить ещё"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>