<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/prod_info_count_box"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/prod_count_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/prod_info_count_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="18dp"
            android:paddingStart="18dp"
            android:background="@null"
            android:inputType="number"
            android:text="150"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorCountSelector"
            />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/prod_info_count_selector"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:layout_marginEnd="18dp"
            android:gravity="start|center_vertical"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/prod_info_add_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/prod_info_count_box"
        android:layout_marginStart="12dp"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:src="@drawable/plus_round_btn"
        android:background="@drawable/prod_add_background"
        android:scaleType="centerInside"
        />

</RelativeLayout>