<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/item_part_background">

    <ImageView
        android:id="@+id/day_part_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        android:layout_centerInParent="true"
        android:padding="4dp"
        android:src="@drawable/snack"/>

    <ImageView
        android:id="@+id/day_part_badge"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@id/day_part_icon"
        android:layout_alignStart="@id/day_part_icon"
        android:paddingTop="8dp"
        android:src="@drawable/check"/>

</RelativeLayout>